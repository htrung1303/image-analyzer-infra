[
  {
    "name": "${name}",
    "image": "${image}:${tag}",
    "portMappings": [
      {
        "containerPort": ${containerPort},
        "hostPort": ${hostPort},
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${awslogs_group}",
        "awslogs-region": "${awslogs_region}",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "environment": [
      {
        "name": "ENVIRONMENT",
        "value": "${env}"
      },
      {
        "name": "AWS_DEFAULT_REGION",
        "value": "${awslogs_region}"
      }
    ],
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:${containerPort}/health || exit 1"
      ],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 60
    }
  }
]
